<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kannyf.anjirrapps">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme1">
        <activity
            android:name="com.example.kannyf.anjirrapps.activities.SplashScreen"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.kannyf.anjirrapps.activities.Login"
            android:theme="@style/AppTheme1"/>
        <activity
            android:name="com.example.kannyf.anjirrapps.activities.MainActivity"
            android:theme="@style/AppTheme1" />
        <activity
            android:name="com.example.kannyf.anjirrapps.activities.Register"
            android:theme="@style/AppTheme1" />
        <activity
            android:name="com.example.kannyf.anjirrapps.fragment.AccountFragmentEdit"
            android:label="Edit Profile" />
        <activity android:name="com.example.kannyf.anjirrapps.activities.CategoryActivity"
            android:theme="@style/AppTheme"
            android:label="Daftar Group"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>